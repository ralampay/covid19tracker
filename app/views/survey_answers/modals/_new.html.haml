#modal-new.modal.fade{:tabindex => "-1" }
  .modal-dialog
    .modal-content
      .modal-header
        %h3.modal-title
          New Answer for Survey
      .modal-body
        .modal-body-content
          .row
            .col
              .form-group
                %label
                  Survey
                = select_tag :survey_id, options_from_collection_for_select(Survey.all, :id, :name), class: "form-control", id: "select-survey"
      .modal-footer
        %button#btn-confirm-new.btn.btn-primary
          .fa.fa-check
          Create Survey Answer
