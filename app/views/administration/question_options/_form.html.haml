= simple_form_for [:administration, @survey, @question, @question_option] do |f|
  .row
    .col
      .form-group
        = f.input :label, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :val, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :priority, input_html: { class: 'form-control' }
  %hr
  %button.btn.btn-success{ type: 'submit' }
    .fa.fa-check
    Save
  = link_to administration_survey_path(@survey), class: 'btn btn-danger' do
    .fa.fa-times
    Cancel
